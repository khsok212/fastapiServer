{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python Debugger: FastAPI",
        "type": "debugpy",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app:app",    // FastAPI 객체가 app.py(또는 __init__.py) 내에 있을 경우
          "--reload",
          "--host",
          "localhost",  // <-- 호스트 설정
          "--port",
          "8000"        // <-- 포트 설정 (원하는 포트 번호)
        ],
        "cwd": "${workspaceFolder}",
        "jinja": true,
        "console": "integratedTerminal",
        "justMyCode": true
      }
    ]
  }
  